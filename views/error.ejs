<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card border-danger">
        <div class="card-header bg-danger text-white">
          <h1><i class="bi bi-exclamation-triangle-fill"></i> Error</h1>
        </div>
        <div class="card-body">
          <h5 class="card-title">Status: <%= error.status %></h5>
          <p class="card-text"><%= message %></p>
          
          <% if (process.env.NODE_ENV !== 'production' && error.stack) { %>
            <div class="mt-4">
              <h6>Stack Trace:</h6>
              <pre class="bg-light p-3 rounded"><code><%= error.stack %></code></pre>
            </div>
          <% } %>
          
          <div class="mt-4">
            <a href="/" class="btn btn-primary"><i class="bi bi-house-fill"></i> Back to Home</a>
            <a href="javascript:history.back()" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 